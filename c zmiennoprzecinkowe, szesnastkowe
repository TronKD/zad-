#include <stdio.h>
#include <conio.h>
#include <stdlib.h>
double szesnastkowystkowy() {
	int a;
	scanf("%i",&a);
	printf("a = %x", a);
}
double zmiennoprzecinkowy(){
	float a;
	scanf("%d",&a);
	printf("a = %.2f", a);
}
int main(int argc, char *argv[]) {
	int koniec;
	int a;

	do{
	 printf("\nPodaj co chcesz liczyc: \n1- szesnastkowystkowy \n2- zmiennoprzecinkowy \n3- koniec \n");
	char key = getch();

	switch (key){
		case '1':
			a = szesnastkowystkowy();
		break;
		case '2':
			a = zmiennoprzecinkowy();
		break;
		case '3': 
		   printf("Koncze");
   		break;
   		default : 
		   printf("Bledna opcja");
	}
	}while(a!=3);
	return 0;
}
